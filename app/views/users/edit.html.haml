.title
  プロフィールページ
.boxes
  = form_for @user do |f|
    .boxes__fields
      = f.label :email , "Email"
      .br
      = f.text_field :email
    .boxes__fields
      = f.label :name , "名前"
      .br
      = f.text_field :name
    .boxes__fields
      = f.label :birthday , "年齢"
      .br
      = f.date_select :birthday, {use_month_names: %w(1月 2月 3月 4月 5月 6月 7月 8月 9月 10月 11月 12月), start_year: 1988, end_year: 2000, default: Date.new(2000,1,1)}
    .boxes__fields
      = f.label :gender , "性別"
      .br
      = f.select :gender, User.genders.keys.to_a, {}
    .boxes__fields
      = f.label :univ , "学校名"
      .br
      = f.text_field :univ
    .boxes__fields
      = f.submit value: "登録する"
